<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <description>Açıklama cümlelerimiz buraya gelecek.
            Buraya açıklama yazmak isteğe bağlıdır.
        </description>
        <managed-bean-name>yonetimliBean</managed-bean-name>
        <managed-bean-class>tr.com.huseyinaydin.YonetimliBean</managed-bean-class>
    
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>

    <managed-bean>
        <description>Bu yönetimli kahve çekirdeği nesnesinin 
            kapsam aralığı session(oturum)dur. 
            Bu tipteki nesneler sayfalar arasında 
            kolayca kullanılarak yönetilirler
        </description>
        <managed-bean-name>yonetimliBean2</managed-bean-name>
        <managed-bean-class>tr.com.huseyinaydin.YonetimliBean2</managed-bean-class>
    
        <managed-bean-scope>session</managed-bean-scope></managed-bean>

</faces-config>
